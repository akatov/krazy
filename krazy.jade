head
  title krazy.io

body
  +application

template(name='application')
  #topbar.navbar.navbar-default.navbar-fixed-top(role="navigation")
    .container
      ul.nav.navbar-nav.navbar-left
        a.navbar-brand krazy.io

  #userbar
    with user
      +userbar
  #main
    +board

template(name="userbar")
  img(src=avatar width="30" height="30")
  button.navbutton.btn.logout Logout


template(name="board")
  h1 My Board
  input#magicBar(type="text" placeholder="type, friend")

  each widgets
    +widget

template(name="widget")
  .widget
    .widget-header
      img(src=owner.avatar width="20" height="20")
      button.delete X
    div.widget-body
      = contents
    div.widget-votes
      div.yes-votes
        | Yes: 
      div.no-votes
        | No: 
