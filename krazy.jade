head
  title krazy.io

body
  +application

template(name='application')

  #topbar.navbar.navbar-default.navbar-fixed-top(role="navigation")
    .container
      ul.nav.navbar-nav.navbar-left
        a.navbar-brand krazy.io

  #userbar
    if currentUser
      +with currentUser
        +userbar
    +loginButtons

  #main
    if currentUser
      +board

template(name="userbar")
  img(src=profile.avatar width="30" height="30")

template(name="board")
  h1 My Board
  input#magicBar(type="text" placeholder="type, friend")
  #board
    each widgets
      +widget

template(name="widget")
  .widget(style=style)
    .widget-header
      img(src=owner.profile.avatar width="20" height="20")
      button.delete X
    if editable
      .widget-body
        textarea
          = contents
        button.save Save
    else
      .widget-body
        = contents
    .widget-votes
      .vote-option
        .vote-option-name
          a.yes Yes:
        .voters
          each votes.yes
            img.voter(src=profile.avatar width="20" height="20")
      .vote-option
        .vote-option-name
          a.no No:
        .voters
          each votes.no
            img.voter(src=profile.avatar width="20" height="20")
