head
  title krazy.io

body
  +application

template(name='application')

  #topbar.navbar.navbar-default.navbar-fixed-top(role="navigation")
    .container
      ul.nav.navbar-nav.navbar-left
        a.navbar-brand krazy.io

  #userbar
    if currentUser
      +with currentUser
        +userbar
    +loginButtons

  #main
    if currentUser
      +board

template(name="userbar")
  img(src=profile.avatar width="30" height="30")

template(name="board")
  h1 My Board
  input#magicBar(type="text" placeholder="type, friend")
  #board
    each widgets
      +widget

template(name="widget")
  .widget(style=style)
    .widget-header
      img(src=owner.profile.avatar width="20" height="20")
      button.delete X
    if editable
      div.widget-body
        textarea
          = contents
        button.save Save
    else
      div.widget-body
        = contents
    div.widget-votes
      div.yes-votes
        a.yes Yes:
        each votes.yes
          img(src=profile.avatar width="20" height="20")
      div.no-votes
        a.no No:
        each votes.no
          img(src=profile.avatar width="20" height="20")
